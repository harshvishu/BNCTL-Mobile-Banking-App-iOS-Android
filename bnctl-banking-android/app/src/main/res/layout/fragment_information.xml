<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            style="@style/toolbar_title"
            android:text="@string/nav_information" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_padding"
                tools:context=".ui.banking.fragments.transfers.TransfersFragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/information_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

    <!--                <Button
                        android:id="@+id/news_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_information_news"
                        android:text="@string/information_button_news"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/offices_and_atms_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_information_offices_and_atms"
                        android:text="@string/information_button_offices_and_atms"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/news_menu_item"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/exchange_rates_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_information_exchange_rates"
                        android:text="@string/information_button_exchange_rates"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/offices_and_atms_menu_item"
                        tools:ignore="RtlHardcoded" />
-->
                    <Button
                        android:id="@+id/manage_payees_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_transfer_template"
                        android:text="@string/information_button_manage_payees"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlHardcoded" />
                    <Button
                        android:id="@+id/settings_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_information_settings"
                        android:text="@string/information_button_settings"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/manage_payees_menu_item"
                        tools:ignore="RtlHardcoded" />
                    <!--
                                        <Button
                                            android:id="@+id/switch_user_menu_item"
                                            style="@style/fragment_list_item.with_arrow_right"
                                            android:drawableLeft="@drawable/ic_information_switch_user"
                                            android:text="@string/information_button_change_customer"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/settings_menu_item"
                                            tools:ignore="RtlHardcoded" />-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".ui.banking.fragments.transfers.TransfersFragment">

                <Button
                    android:id="@+id/logout_menu_item"
                    style="@style/fragment_list_item.with_arrow_right"
                    android:drawableLeft="@drawable/ic_information_logout"
                    android:text="@string/information_button_logout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch_user_menu_item"
                    tools:ignore="RtlHardcoded" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destination_account_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".ui.banking.fragments.transfers.create.sections.account.destination.myaccount.SelectDestinationAccountFragment">

    <TextView
        android:id="@+id/destination_account_select_title"
        style="@style/section_label"
        android:text="@string/transfer_form_label_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        style="@style/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/destination_account_data_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/fragment_padding">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/destination_account_select_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/fragment_views_margin_image_alignment"
                android:background="@drawable/outline_common"
                android:src="@drawable/ic_account"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_image_view"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
                android:layout_marginTop="@dimen/fragment_views_margin_vertical_shorter"
                android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
                android:layout_toStartOf="@id/destination_account_select_button_edit"
                android:layout_toEndOf="@+id/destination_account_select_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destination_account_select_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_sub_heading"
                    tools:text="Current Account" />

                <TextView
                    android:id="@+id/destination_account_select_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_secondary"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="BG11BNBG97451028545673" />

                <TextView
                    android:id="@+id/destination_account_select_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragment_views_margin_vertical"
                    android:textStyle="bold"
                    tools:text="Balance: 2000.50 BGN" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/destination_account_select_button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/image_button_padding"
                app:srcCompat="@drawable/ic_edit" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/destination_account_select_account_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fragment_padding"
            android:visibility="visible">

            <TextView
                android:id="@+id/destination_account_select_account_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_select_account_select_select_account"
                android:textColor="@color/primaryLightColor"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/destination_account_select_account_label"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/toolbar_menu_close"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/transfer_type_title"
            style="@style/toolbar_title"
            tools:text="Transfer Type" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/transfer_base"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:padding="@dimen/fragment_padding">

            <LinearLayout
                android:id="@+id/transfer_sections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/transfer_base_primary_button_wrapper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:context=".ui.banking.fragments.transfers.BaseTransferFragment">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/transfer_base_source_account"
                    android:name="tl.bnctl.banking.ui.banking.fragments.transfers.create.sections.account.source.SelectAccountFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="visible"
                    tools:layout="@layout/fragment_section_account_select" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/transfer_base_destination_account"
                    android:name="tl.bnctl.banking.ui.banking.fragments.transfers.create.sections.account.destination.newpayee.NewPayeeFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="visible"
                    tools:layout="@layout/fragment_section_payee_new" />

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/transfer_base_details"
                    android:name="tl.bnctl.banking.ui.banking.fragments.transfers.create.sections.details.TransferDetailsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:visibility="visible"
                    tools:layout="@layout/fragment_section_transfer_details" />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/transfer_base_primary_button_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/transfer_sections">
                <Button
                    android:id="@+id/transfer_base_next"
                    style="@style/bottom_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/common_button_next"
                    tools:visibility="gone" />
                <Button
                    android:id="@+id/transfer_base_initiate_pending"
                    style="@style/bottom_action_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/initiate_pending_transfer"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>


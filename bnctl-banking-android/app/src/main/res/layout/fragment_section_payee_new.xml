<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destination_payee_new"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".ui.banking.fragments.transfers.create.sections.account.destination.newpayee.NewPayeeFragment">

    <TextView
        android:id="@+id/new_payee_title"
        style="@style/section_label"
        android:text="@string/transfer_form_label_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        style="@style/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_payee_beneficiary_name_layout"
                style="@style/form_fields_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_views_margin_vertical_tiny"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_large"
                android:hint="@string/transfer_form_placeholder_beneficiary_name"
                app:boxBackgroundColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_payee_beneficiary_name"
                    style="@style/form_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/hint_text_color"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="Haralampi Haralampiev" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/new_payee_destination_account_layout"
                style="@style/form_fields_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
              android:hint="@string/transfer_form_placeholder_account_number"
              app:boxBackgroundColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/new_payee_destination_account"
                    style="@style/form_fields"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:importantForAutofill="no"
                  android:inputType="textCapCharacters"
                  android:textColorHint="@color/hint_text_color"
                  android:textSize="@dimen/text_size_normal"
                  tools:text="BG06BUIN95611000423966" />

            </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_payee_email_layout"
            style="@style/form_fields_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
            android:hint="@string/transfer_form_placeholder_payee_email"
            app:boxBackgroundColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/new_payee_email"
              style="@style/form_fields"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:importantForAutofill="no"
              android:inputType="textEmailAddress"
              android:textColorHint="@color/hint_text_color"
              android:textSize="@dimen/text_size_normal"
              tools:text="pop@armenia.com" />

          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_payee_bank_layout"
            style="@style/form_fields_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
            android:hint="@string/transfer_form_placeholder_payee_bank"
            app:boxBackgroundColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/new_payee_bank"
              style="@style/form_fields"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:importantForAutofill="no"
              android:enabled="false"
              android:textColorHint="@color/hint_text_color"
              android:textSize="@dimen/text_size_normal"
              tools:text="BNCTL" />

          </com.google.android.material.textfield.TextInputLayout>
          <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/new_payee_swift_code_layout"
            style="@style/form_fields_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
            android:hint="@string/transfer_form_placeholder_payee_swift_code"
            app:boxBackgroundColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/new_payee_swift_code"
              style="@style/form_fields"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:importantForAutofill="no"
              android:enabled="false"
              android:textColorHint="@color/hint_text_color"
              android:textSize="@dimen/text_size_normal"
              tools:text="BNCTTLDD" />

          </com.google.android.material.textfield.TextInputLayout>

          <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/new_payee_add_to_payee_list_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/hint_text_color"
            android:text="@string/new_payee_add_to_payee_list" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
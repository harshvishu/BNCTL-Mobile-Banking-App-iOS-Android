<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            style="@style/toolbar_title"
            android:text="@string/services_title" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.banking.fragments.services.ServicesFragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/services_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/services_utility_bills_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_service_utility_bills"
                        android:text="@string/services_button_utility_bills"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/services_insurance_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_service_insurances"
                        android:text="@string/services_button_insurance"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/services_utility_bills_menu_item"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/services_cash_withdrawal_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_service_cash_withdrawal"
                        android:text="@string/services_button_cash_withdrawal"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/services_insurance_menu_item"
                        tools:ignore="RtlHardcoded" />

                    <Button
                        android:id="@+id/services_foreign_currency_exchange_menu_item"
                        style="@style/fragment_list_item.with_arrow_right"
                        android:drawableLeft="@drawable/ic_service_currency_exchange"
                        android:text="@string/services_button_foreign_currency_exchange"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/services_cash_withdrawal_menu_item"
                        tools:ignore="RtlHardcoded" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
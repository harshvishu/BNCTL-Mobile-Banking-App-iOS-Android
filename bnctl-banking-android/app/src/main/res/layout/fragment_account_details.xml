<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/toolbar_menu_info"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            style="@style/toolbar_title"
            android:text="@string/account_details_title" />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loading_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <!-- Account header -->
            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/fragment_account_details_accent_color"
                        android:padding="@dimen/fragment_padding">

                        <TextView
                            android:id="@+id/account_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
                            android:textColor="@color/primaryDarkColor"
                            android:textSize="@dimen/text_size_sub_heading"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="Current Account" />

                        <TextView
                            android:id="@+id/account_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/primaryLightColor"
                            android:textSize="@dimen/text_size_normal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/account_name"
                            tools:text="BG80BNBG96611020345666" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copy_account_number_button"
                            style="@style/material_button"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:icon="@drawable/ic_copy"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/account_balances"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/fragment_padding">

                        <TextView
                            android:id="@+id/account_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
                            android:textSize="@dimen/text_size_larger"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="2300.00" />

                        <TextView
                            android:id="@+id/account_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
                            android:textColor="@color/text_color_secondary"
                            android:textSize="@dimen/text_size_heading"
                            app:layout_constraintBaseline_toBaselineOf="@id/account_balance"
                            app:layout_constraintStart_toEndOf="@+id/account_balance"
                            tools:text="BGN" />

                        <TextView
                            android:id="@+id/blocked_amount_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="@string/account_details_label_blocked_amount"
                            android:textColor="@color/text_color_secondary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/account_balance" />

                        <TextView
                            android:id="@+id/balances_dialog_blocked_amount_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
                            android:textColor="@color/text_color_secondary"
                            android:textStyle="bold"
                            app:layout_constraintBaseline_toBaselineOf="@+id/blocked_amount_label"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/blocked_amount_label"
                            tools:text="0.00" />

                        <TextView
                            android:id="@+id/blocked_amount_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin_horizontal"
                            android:textColor="@color/text_color_secondary"
                            android:textStyle="bold"
                            app:layout_constraintBaseline_toBaselineOf="@+id/blocked_amount_label"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/balances_dialog_blocked_amount_amount"
                            tools:text="BGN" />

                        <TextView
                            android:id="@+id/button_balances"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/account_details_button_balances"
                            android:textColor="@color/primaryColor"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:layout_constraintBaseline_toBaselineOf="@+id/blocked_amount_label"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment_account_statements"
                android:name="tl.bnctl.banking.ui.banking.fragments.accounts.details.AccountDetailsStatementsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_statements" />

            <androidx.cardview.widget.CardView
                android:id="@+id/display_all_account_statements"
                style="@style/card_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_views_margin_vertical_shorter">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/button_display_all_account_statements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/fragment_padding"
                        android:textSize="@dimen/text_size_sub_heading"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:textColor="@color/primaryColor"
                        android:textAlignment="center"
                        android:text="@string/account_details_button_show_all_statements"
                    />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

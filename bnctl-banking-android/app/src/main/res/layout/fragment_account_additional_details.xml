<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <!-- Top Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/toolbar_title"
            style="@style/toolbar_title"
            android:text="@string/account_additional_details_title" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Body -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/fragment_padding">

        <androidx.cardview.widget.CardView
            style="@style/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_item_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/fragment_padding">

                <!-- Beneficiary -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/beneficiary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical_huge"
                    app:layout_constraintBottom_toTopOf="@id/accountNumber"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/beneficiary_label"
                        style="@style/account_additional_details_label"
                        android:text="@string/account_additional_details_label_beneficiary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/beneficiary_value"
                        style="@style/account_additional_details_text"
                        app:layout_constraintEnd_toStartOf="@+id/button_copy_beneficiary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/beneficiary_label"
                        tools:text="Account Holder Second-Name Long-Surname" />

                    <ImageButton
                        android:id="@+id/button_copy_beneficiary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_copy" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Account Number -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/accountNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical_huge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/beneficiary">

                    <TextView
                        android:id="@+id/account_number_label"
                        style="@style/account_additional_details_label"
                        android:text="@string/account_additional_details_label_account_number"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/account_number_value"
                        style="@style/account_additional_details_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/account_number_label"
                        tools:text="BG02BUIN95611000676723" />

                    <ImageButton
                        android:id="@+id/button_copy_account_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_copy" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- BIC -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical_huge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accountNumber">

                    <TextView
                        android:id="@+id/bic_label"
                        style="@style/account_additional_details_label"
                        android:text="@string/account_additional_details_label_bic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/bic_value"
                        style="@style/account_additional_details_text"
                        android:text="@string/account_additional_details_label_bic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bic_label" />

                    <ImageButton
                        android:id="@+id/button_copy_bic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:backgroundTint="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_copy" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Type Account -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/account_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/fragment_views_margin_vertical_huge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/bic">

                    <TextView
                        android:id="@+id/account_type_label"
                        style="@style/account_additional_details_label"
                        android:text="@string/account_additional_details_label_account_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/account_type_value"
                        style="@style/account_additional_details_text"
                        android:text="@string/account_additional_details_label_account_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/account_type_label" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Currency -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/currency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/account_type">

                    <TextView
                        android:id="@+id/currency_title_label"
                        style="@style/account_additional_details_label"
                        android:text="@string/account_additional_details_label_currency"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/currency_value"
                        style="@style/account_additional_details_text"
                        android:text="@string/account_additional_details_label_currency"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/currency_title_label" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
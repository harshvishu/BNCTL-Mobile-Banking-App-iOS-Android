<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transfer_select_account_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/transfer_select_account_item_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal"
            android:layout_marginTop="@dimen/fragment_views_margin_vertical"
            android:background="@drawable/outline_common"
            android:src="@drawable/ic_account"
            app:contentPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/rounded_image_view"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginTop="@dimen/fragment_views_margin_vertical_shorter"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
            android:layout_toEndOf="@+id/transfer_select_account_item_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transfer_select_account_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                tools:text="Current Account" />

            <TextView
                android:id="@+id/transfer_select_account_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                tools:text="BG11BNBG97451028545673" />

            <TextView
                android:id="@+id/transfer_select_account_item_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_views_margin_vertical"
                android:text="@string/transfer_select_account_balance_label"
                android:textStyle="bold"
                tools:text="Balance: 2000.50 BGN" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
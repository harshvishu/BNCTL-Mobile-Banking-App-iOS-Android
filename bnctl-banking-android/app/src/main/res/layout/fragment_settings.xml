<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            style="@style/toolbar_title"
            android:text="@string/settings_title" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_padding"
                tools:context=".ui.banking.fragments.transfers.TransfersFragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/settings_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                      android:id="@+id/language_menu_item"
                      style="@style/fragment_list_item.with_arrow_right"
                      android:drawableLeft="@drawable/ic_languages"
                      android:text="@string/settings_label_languages"
                      android:textStyle="normal"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:ignore="RtlHardcoded" />


                  <Button
                    android:id="@+id/change_username_menu_item"
                    style="@style/fragment_list_item.with_arrow_right"
                    android:textStyle="normal"
                    android:drawableLeft="@drawable/ic_user"
                    android:text="@string/settings_label_change_username"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/language_menu_item"
                    tools:ignore="RtlHardcoded" />

                  <Button
                    android:id="@+id/change_password_menu_item"
                    style="@style/fragment_list_item.with_arrow_right"
                    android:textStyle="normal"
                    android:drawableLeft="@drawable/ic_password"
                    android:text="@string/settings_label_change_password"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/change_username_menu_item"
                    tools:ignore="RtlHardcoded" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


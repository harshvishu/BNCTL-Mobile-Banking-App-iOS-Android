<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/fragment_background_focus"
  android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    app:navigationIcon="@drawable/ic_back">

    <TextView
      style="@style/toolbar_title"
      android:text="@string/title_change_username" />

  </androidx.appcompat.widget.Toolbar>

  <com.google.android.material.progressindicator.LinearProgressIndicator
    android:id="@+id/loading_indicator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:indeterminate="true"
    android:visibility="gone" />

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/settings_change_username_currentUsername_layout"
      style="@style/form_fields_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/fragment_views_margin_vertical_huge"
      android:layout_marginStart="@dimen/fragment_views_margin_horizontal_large"
      android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_large"
      android:hint="@string/settings_change_username_placeholder_currentUsername"
      app:boxBackgroundColor="@android:color/transparent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputCurrentUsername"
        style="@style/form_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:textIsSelectable="true"
        android:focusable="false"
        android:enabled="false"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/settings_change_username_newUsername_layout"
      style="@style/form_fields_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/fragment_views_margin_vertical"
      android:layout_marginStart="@dimen/fragment_views_margin_horizontal_large"
      android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_large"
      android:hint="@string/settings_change_username_placeholder_newUsername"
      app:boxBackgroundColor="@android:color/transparent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/settings_change_username_currentUsername_layout">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputNewUsername"
        style="@style/form_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/settings_change_username_repeatUsername_layout"
      style="@style/form_fields_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/fragment_views_margin_vertical"
      android:layout_marginStart="@dimen/fragment_views_margin_horizontal_large"
      android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_large"
      android:hint="@string/settings_change_username_placeholder_repeatUsername"
      app:boxBackgroundColor="@android:color/transparent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/settings_change_username_newUsername_layout">

      <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputRepeatUsername"
        style="@style/form_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
      android:id="@+id/settings_change_username_submitButton"
      style="@style/bottom_action_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/common_button_submit"
      android:layout_marginBottom="@dimen/fragment_views_margin_vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:menu="@menu/toolbar_menu_close">

        <TextView
            style="@style/toolbar_title"
            android:text="@string/statements_filter_title" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
                android:text="@string/statements_filter_label_period"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/start_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/fragment_padding">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/statements_filter_label_start_date"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/start_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/text_size_normal"
                            tools:text="14.05.2020" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:src="@drawable/ic_calendar_light_blue" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/start_date_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/view_padding_tiny"
                        android:paddingStart="@dimen/fragment_padding"
                        android:paddingEnd="@dimen/fragment_padding"
                        android:gravity="start"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_smaller"
                        android:visibility="gone"
                        tools:text="Some nasty date-related error... ew!"
                        tools:visibility="visible" />

                    <View style="@style/Divider" />

                    <LinearLayout
                        android:id="@+id/end_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/fragment_padding">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/statements_filter_label_end_date"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:id="@+id/end_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="@dimen/text_size_normal"
                            tools:text="15.05.2020" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleX="2"
                            android:scaleY="2"
                            android:src="@drawable/ic_calendar_light_blue" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/end_date_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/view_padding_tiny"
                        android:paddingStart="@dimen/fragment_padding"
                        android:paddingEnd="@dimen/fragment_padding"
                        android:gravity="start"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_smaller"
                        android:visibility="gone"
                        tools:text="Some nasty date-related error... ew!" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/fragment_padding">

        <Button
            android:id="@+id/apply_filters_button"
            style="@style/bottom_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statements_filter_button_filter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loading_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:indeterminate="true"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/fragment_padding"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_language_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/fragment_views_margin_bottom"
            android:layout_weight="0.2"
            android:clickable="true"
            android:focusable="true"
            android:text="PT"
            android:textSize="@dimen/text_size_normal" />

        <include android:id="@+id/logo_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_views_margin_bottom"
            layout="@layout/section_logo_with_bank_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_login_input_username_layout"
            style="@style/form_fields_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fragment_views_margin_horizontal"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_large"
            android:hint="@string/login_placeholder_username"
            app:boxBackgroundColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_login_input_username"
                style="@style/form_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:autofillHints="username"
                android:inputType="text"
                android:saveEnabled="false"
                tools:text="TEST" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_login_input_password_layout"
            style="@style/form_fields_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fragment_views_margin_horizontal"
            android:layout_marginBottom="@dimen/fragment_views_margin_bottom_large"
            android:hint="@string/login_placeholder_password"
            app:boxBackgroundColor="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fragment_login_input_password"
                style="@style/form_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:saveEnabled="false"
                tools:text="123" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/fragment_login_button_login"
            style="@style/bottom_action_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fragment_views_margin_vertical_huge"
            android:layout_weight="0.1"
            android:enabled="true"
            android:text="@string/login_button_sign_in" />

        <TextView
            android:id="@+id/login_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:clickable="true"
            android:focusable="true"
            android:lineSpacingExtra="2sp"
            android:text="@string/login_label_forgot_password"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            android:textStyle="normal" />

        <androidx.legacy.widget.Space
            android:id="@+id/fragment_login_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>

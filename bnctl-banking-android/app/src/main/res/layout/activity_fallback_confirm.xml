<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fallback.FallbackConfirmActivity">

    <!-- Top Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/fragment_views_margin_horizontal_short"
        android:paddingEnd="@dimen/fragment_views_margin_horizontal_short"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            style="@style/toolbar_title"
            android:text="" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/fallback_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="@dimen/fragment_padding"
        android:paddingStart="@dimen/fragment_views_margin_horizontal"
        android:text="@string/fallback_complete_action_via_sms_code"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/fallback_subtitle"
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/fragment_views_margin_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
        android:text="@string/fallback_enter_sms_code"
        android:textAlignment="viewStart"
        android:textSize="@dimen/text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallback_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fallback_sms_code_layout"
        style="@style/form_fields_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_views_margin_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallback_subtitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fallback_sms_code"
            style="@style/form_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fallback_verification_code"
            android:inputType="number"
            android:maxLines="1"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fallback_pin_layout"
        style="@style/form_fields_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_views_margin_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallback_sms_code_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fallback_pin"
            style="@style/form_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fallback_enter_pin"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/confirm_fallback_button"
        style="@style/bottom_action_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fallback_confirm_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallback_pin_layout"
        app:layout_constraintVertical_bias="0.13" />

</androidx.constraintlayout.widget.ConstraintLayout>
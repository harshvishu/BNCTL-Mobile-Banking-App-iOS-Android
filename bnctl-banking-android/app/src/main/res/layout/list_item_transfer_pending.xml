<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/fragment_views_margin_horizontal"
    android:layout_marginTop="@dimen/fragment_views_margin_vertical"
    android:layout_marginEnd="@dimen/fragment_views_margin_horizontal"
    android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
    android:background="@color/list_item_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/image_button_padding">

        <CheckBox
            android:id="@+id/transfer_pending_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="PendingTransfer" />

        <LinearLayout
            android:id="@+id/row_number_of_documents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_pending_documents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Documents"
                android:text="@string/transfer_pending_label_card_documents"
                android:textColor="@color/text_color_secondary" />

            <TextView
                android:id="@+id/transfer_pending_value_documents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_small"
                tools:text="12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/beneficiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_pending_label_beneficiary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transfer_pending_label_card_beneficiary"
                android:textColor="@color/text_color_secondary" />

            <TextView
                android:id="@+id/transfer_pending_value_beneficiary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_small"
                tools:text="Tom Terrance" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_pending_label_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transfer_pending_label_card_reason"
                android:textColor="@color/text_color_secondary" />

            <TextView
                android:id="@+id/transfer_pending_value_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_small"
                tools:text="Factura Seria CSS N 09765" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_from_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_pending_label_from_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transfer_pending_label_card_from_account"
                android:textColor="@color/text_color_secondary" />

            <TextView
                android:id="@+id/transfer_pending_value_from_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_small"
                tools:text="BG77BUIN95611000677313" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_to_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/transfer_pending_label_to_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/transfer_pending_label_card_to_account"
                android:textColor="@color/text_color_secondary" />

            <TextView
                android:id="@+id/transfer_pending_value_to_account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textSize="@dimen/text_size_small"
                tools:text="BG77BUIN95611000677313" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_views_margin_horizontal_short"
            android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingTop="@dimen/image_button_padding"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/transfer_pending_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_sub_heading"
                tools:text="500" />

            <TextView
                android:id="@+id/transfer_pending_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin_horizontal"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_smaller"
                tools:text="BGN" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currency_exchange_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".ui.banking.fragments.services.currencyExchange.create.sections.details.CurrencyExchangeDetailsFragment">

    <TextView
        android:id="@+id/currency_exchange_details_title"
        style="@style/section_label"
        android:text="@string/currency_exchange_form_label_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/fragment_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_views_margin_vertical_tiny"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_large"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/currency_exchange_details_amount_layout"
                    style="@style/form_fields_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/fragment_views_margin_horizontal_short"
                    android:layout_weight="1"
                    android:hint="@string/currency_exchange_form_placeholder_amount"
                    app:boxBackgroundColor="@android:color/transparent">

                    <tl.bnctl.banking.ui.banking.custom.amount.field.CustomAmountEditText
                        android:id="@+id/currency_exchange_details_amount"
                        style="@style/form_fields"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
                        android:importantForAutofill="no"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="100" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/currency_exchange_details_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="BGN" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/currency_exchange_details_preferential_rates_pin_layout"
                style="@style/form_fields_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_views_margin_bottom"
                android:hint="@string/currency_exchange_form_placeholder_preferential_rates_pin"
                app:boxBackgroundColor="@android:color/transparent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/currency_exchange_details_preferential_rates_pin"
                    style="@style/form_fields"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_normal"
                    tools:ignore="TextFields"
                    tools:text="1231" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/currency_exchange_details_operation_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/fragment_views_margin_vertical_shorter"
                android:text="@string/currency_exchange_form_label_operation_type"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_tiny" />

            <RadioGroup
                android:id="@+id/currency_exchange_details_operation_type_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/currency_exchange_details_operation_type_radio_button_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/currency_exchange_label_type_sell" />

                <RadioButton
                    android:id="@+id/currency_exchange_details_operation_type_radio_button_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/currency_exchange_label_type_buy" />

            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
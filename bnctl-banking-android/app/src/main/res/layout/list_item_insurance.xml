<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fragment_padding"
    android:layout_marginBottom="@dimen/fragment_views_margin_vertical"
    android:background="@color/list_item_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/image_button_padding">

        <TextView
            android:id="@+id/insurance_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_button_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:id="@+id/row_amount_bgn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/insurance_label_amount_bgn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_amount_bgn" />

            <TextView
                android:id="@+id/insurance_value_amount_bgn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="100 BGN" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_amount_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/insurance_label_amount_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_amount_currency"
                tools:text="Amount EUR" />

            <TextView
                android:id="@+id/insurance_value_amount_eur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="50 EUR" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_date" />

            <TextView
                android:id="@+id/insurance_value_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="19.10.2021" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_policy_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_policy_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_policy_num" />

            <TextView
                android:id="@+id/insurance_value_policy_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="B 743909908/09" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_insurer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_insurer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_insurer" />

            <TextView
                android:id="@+id/insurance_value_insurer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="BNCTL" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_to_account_bgn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_to_account_bgn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_account_bgn" />

            <TextView
                android:id="@+id/insurance_value_to_account_bgn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="BG16BUIN87876567878888" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_to_account_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_to_account_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_account_currency"
                tools:text="Account EUR" />

            <TextView
                android:id="@+id/insurance_value_to_account_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="BG16BUIN87876567878888" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_installment_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/insurance_label_installment_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/insurance_list_item_label_Installment_number" />

            <TextView
                android:id="@+id/insurance_value_installment_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                tools:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/image_button_padding">

            <Button
                android:id="@+id/insurance_pay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/button_margin_horizontal_huge"
                android:text="@string/insurance_list_item_button_pay"
                android:textAllCaps="true" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>